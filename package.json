{
  "name": "react-ssr-boilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/Colour-Full/react-ssr-boilerplate.git",
  "author": "Colour-Full <velizar@colour-full.co.uk>",
  "license": "MIT",
  "scripts": {
    "make:client": "rm -rf ./client/lib && babel ./client/src --out-dir ./client/lib --ignore '**/__tests__','**/stories'",
    "make:server": "rm -rf ./server/lib && babel ./server/src --out-dir ./server/lib --ignore __tests__",
    "make:bundle": "webpack --config webpack.prod.js",
    "start:dev-server": "yarn make:bundle && yarn make:client && PRODUCTION=true nodemon --exec 'babel-node' ./server/src",
    "start:dev-client": "yarn make:server && HOT=true node ./server/lib",
    "make": "yarn make:client && yarn make:server && yarn make:bundle",
    "start": "node  -r dotenv/config ./server/lib dotenv_config_path=./.env",
    "storybook": "start-storybook -p 9001 -c .storybook"
  },
  "dependencies": {
    "@babel/polyfill": "^7.0.0",
    "@emotion/core": "^10.0.4",
    "@emotion/styled": "^10.0.4",
    "dotenv": "^6.2.0",
    "emotion-normalize": "^8.0.0",
    "koa": "^2.6.2",
    "koa-compress": "^3.0.0",
    "koa-mount": "^4.0.0",
    "koa-static": "^5.0.0",
    "react": "^16.6.3",
    "react-dom": "^16.6.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.0",
    "@babel/node": "^7.2.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "@babel/preset-react": "^7.0.0",
    "@storybook/addon-notes": "^4.1.1",
    "@storybook/react": "^4.1.1",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.4",
    "babel-plugin-emotion": "^10.0.5",
    "babel-plugin-module-resolver": "^3.1.1",
    "babel-plugin-transform-builtin-extend": "^1.1.2",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "clean-webpack-plugin": "^1.0.0",
    "eslint": "^5.10.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-config-standard-react": "^7.0.2",
    "eslint-plugin-flowtype": "^3.2.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^22.1.2",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-standard": "^4.0.0",
    "html-webpack-plugin": "^3.2.0",
    "koa-webpack": "^5.1.1",
    "nodemon": "^1.18.7",
    "react-hot-loader": "^4.3.12",
    "react-syntax-highlighter": "^10.1.2",
    "uglifyjs-webpack-plugin": "^2.0.1",
    "webpack": "^4.27.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-middleware": "^3.4.0",
    "webpack-dev-server": "^3.1.10",
    "webpack-hot-client": "^4.1.1"
  }
}
